<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Date and Time Display</title>
</head>
<body>
<script>
  const currentDate = new Date();
  const formattedDate = `${currentDate.getDate()}.${currentDate.getMonth() + 1}.${currentDate.getFullYear()}`;
  const formattedTime = `${currentDate.getHours()}.${currentDate.getMinutes()}.${currentDate.getSeconds()}`; document.write(`<p>Date- ${formattedDate}</p>`);
  document.write(`<p>Time- ${formattedTime}</p>`);
</script>
</body>
</html>

set 9 4th:

var currentDate = new Date();
var date = currentDate.toLocaleDateString();
var time = currentDate.toLocaleTimeString();
console.log("Current Date: " + date);
console.log("Current Time: " + time);

set 1 2th:
function getNearestOddNumbers() {
  let userInput = prompt("Enter numbers separated by commas:");
  let numbers = userInput.split(",").map(Number);
  let nearestOddNumbers = numbers.map(function(number) {
    let nearestOdd = Math.round(number / 2) * 2 + 1; 
    return nearestOdd;
  });
  alert("Nearest odd numbers: " + nearestOddNumbers.join(", "));
}
getNearestOddNumbers();

set3 1st:
function validateEmail(email) {
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return emailRegex.test(email);
}
const userInput = prompt("Enter your email address:");
if (validateEmail(userInput)) {
    console.log("Email is valid!");
} else {
    console.log("Email is not valid. Please enter a valid email address.");
}
